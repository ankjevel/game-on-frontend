{
  "compilerOptions": {
    "baseUrl": "./src/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist/",
    "paths": { "*": ["types/*"] },
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["./src", "./types"],
  "exclude": ["node_modules"]
}
