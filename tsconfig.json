{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist/",
    "paths": { "*": ["src/types/*"] },
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es5"
  },
  "exclude": ["node_modules"]
}
