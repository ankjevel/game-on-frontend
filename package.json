{
  "name": "game-on-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node bin/generateConfig && serve -s dist",
    "dev": "webpack-dev-server --no-inline",
    "build": "mode=production webpack",
    "lint": "eslint '{types,src,bin,lib}/{**/,}*.{js,ts,tsx}'",
    "prettier": "prettier --check '{types,src,bin,lib}/{**/,}*.{js,ts,tsx}'",
    "test": "jest --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "@iteam/config": "12.1.0",
    "serve": "11.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.6.0",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/preset-env": "7.6.0",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.6.0",
    "@iteam/eslint-config-iteam-node": "0.1.0",
    "@testing-library/react": "9.1.4",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.3",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-router-dom": "4.3.5",
    "@types/react-test-renderer": "16.9.0",
    "@types/socket.io-client": "1.4.32",
    "@types/styled-components": "4.1.18",
    "@typescript-eslint/eslint-plugin": "2.1.0",
    "@typescript-eslint/parser": "2.1.0",
    "autoprefixer": "9.6.1",
    "babel-loader": "8.0.6",
    "core-js": "3.2.1",
    "css-loader": "3.2.0",
    "eslint": "6.3.0",
    "eslint-plugin-react-hooks": "2.0.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.9.0",
    "jest-css-modules": "2.1.0",
    "jest-expect-message": "1.0.2",
    "jest-watch-typeahead": "0.4.0",
    "postcss-loader": "3.0.0",
    "prettier": "1.18.2",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-router-dom": "5.0.1",
    "react-test-renderer": "16.9.0",
    "socket.io-client": "2.2.0",
    "source-map-loader": "0.2.4",
    "style-loader": "1.0.0",
    "tailwindcss": "1.1.2",
    "ts-jest": "24.0.2",
    "typescript": "3.6.2",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.8",
    "webpack-dev-server": "3.8.0"
  },
  "optionalDependencies": {
    "husky": "3.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run prettier",
      "pre-push": "npm test"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "clearMocks": true,
    "coveragePathIgnorePatterns": [
      "node_modules",
      "__fixtures__"
    ],
    "coverageReporters": [
      "text"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/lib/globalMocks.js"
    ],
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ],
    "testEnvironment": "node",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sss|styl)$": "<rootDir>/node_modules/jest-css-modules"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "debug": false,
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@iteam/eslint-config-iteam-node"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "modules": true
      },
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "**/*.tsx",
          "**/*.ts",
          "**/*.js"
        ],
        "rules": {
          "no-undef": "off",
          "no-unused-vars": "off",
          "react/prop-types": "off",
          "space-before-function-paren": "off",
          "require-atomic-updates": "off"
        }
      }
    ],
    "rules": {
      "no-unexpected-multiline": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
